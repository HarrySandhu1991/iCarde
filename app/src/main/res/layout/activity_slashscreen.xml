<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen.SlashscreenActivity"
    android:background="@drawable/login_screen_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_card_visit"
            android:layout_margin="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to iCarde"
            android:layout_margin="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20sp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-70dp">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:id="@+id/iv_manGivingCard"
                android:src="@drawable/man_giving_visiting"
                android:layout_marginTop="20dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_getstarted"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Get started"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/get_started_button_background"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="10dp"
        android:ems="8"
        android:gravity="center"
        />

</RelativeLayout>